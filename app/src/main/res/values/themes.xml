<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BiometricThings" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">#f0f1f5</item>
        <item name="colorPrimary">@color/scala1</item>
        <item name="colorPrimaryVariant">@color/scala1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#f0f1f5</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#54B89C</item>
        <!-- Customize your theme here. -->

    </style>


    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">#54B89C</item>
        <item name="itemTextColor">#54B89C</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>
</resources>