<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Profesor.AnualActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvInformacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/alata"
                android:text="Introduce los siguientes Datos:"
                android:textSize="24sp" />

    <TextView
        android:id="@+id/tvCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvInformacion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/alata"
        android:text="Mensaje para Hacienda:"
        android:textSize="24sp" />

            <EditText
                android:id="@+id/etMensajeHaciendaAnual"
                android:layout_width="300dp"
                android:fontFamily="@font/alata"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCuenta"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:hint="Mensaje"
                android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tvCuentaPersonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etMensajeHaciendaAnual"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/alata"
        android:text="Saldo Actual:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etCuentaPersonal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:layout_below="@+id/tvCuentaPersonal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="Saldo Personal"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tvBeneficioAnual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCuentaPersonal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/alata"
        android:text="Beneficio Anual"

        android:textSize="24sp" />

            <EditText
                android:id="@+id/etBeneficioAnual"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBeneficioAnual"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/alata"
                android:hint="Beneficio Personal"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnEnviarAnual"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etBeneficioAnual"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/alata"
                android:text="Enviar" />

            <Button
                android:id="@+id/btnAtrasA"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnEnviarAnual"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/alata"
                android:text="AtrÃ¡s" />

</RelativeLayout>
    </ScrollView>


</RelativeLayout>