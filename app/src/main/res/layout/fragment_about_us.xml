<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsFragment">

    <TextView
        android:id="@+id/tvInfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="About Us"
        android:textSize="50dp" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_below="@+id/tvInfo1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <TextView
                android:id="@+id/tvOtracosa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="45dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/alata"
                android:text="VieFy - Simulador De Vida"
                android:textSize="20sp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivPerfilPerfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/tvOtracosa"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/dani" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivPerfilPerfil"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/alata"
                android:text="Desarrollador: Daniel Sabbagh Pastor"
                android:textSize="20sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfe"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img"
                android:layout_below="@id/tvNombre"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/tvApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfe"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/alata"
        android:text="Tutor: Jose Alberto Aijón Jiménez"
        android:textSize="20sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivCentro"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/uem"
                android:layout_below="@id/tvApellido"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/tvCentro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivCentro"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/alata"
                android:text="Universidad Europea de Madrid"
                android:textSize="20sp"
                android:layout_marginBottom="90dp"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>