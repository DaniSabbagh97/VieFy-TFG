<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profesor.CrearClaseActivity">


    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="Crea una Clase"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/etNombreClase"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tvTitulo"
        android:hint="Nombre de la Clase"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/etNumAlumnos"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/etNombreClase"
        android:hint="NÃºmero de Alumnos"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/etClaveAcceso"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/etNumAlumnos"
        android:hint="Define una Clave de Acceso"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/etFechaInicio"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etClaveAcceso"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="Indica la Fecha de Inicio"
        android:clickable="true"
        android:focusable="false"
        android:inputType="date"
        android:maxLines="1" />

    <EditText
        android:id="@+id/etFechaFin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etFechaInicio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:focusable="false"
        android:hint="Indica la Fecha de Fin"
        android:inputType="date"
        android:maxLines="1" />

    <Button
        android:id="@+id/btnCrear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/etFechaFin"

        android:text="Crear" />


</RelativeLayout>